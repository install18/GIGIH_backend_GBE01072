<h1><%= category.name %> Detail</h1>

<p>Category ID: <%= category.id %></p>
<p>Category Name: <%= category.name %></p>
<div>Items:</div>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
  </tr>

  <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
    </tr>
  <% end %>
</table>